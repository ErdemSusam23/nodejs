{
  "name": "nodejs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon -L ./bin/www",
    "test": "cross-env LOG_LEVEL=off NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env LOG_LEVEL=off NODE_ENV=test jest --watch",
    "test:coverage": "cross-env LOG_LEVEL=off NODE_ENV=test jest --coverage",
    "test:verbose": "cross-env LOG_LEVEL=off NODE_ENV=test jest --verbose",
    "test:local": "cross-env CONNECTION_STRING=mongodb://localhost:27018/nodejs_test LOG_LEVEL=off jest --detectOpenHandles --forceExit",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit --attach app-test",
    "test:docker:down": "docker-compose -f docker-compose.test.yml down -v"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.6",
    "debug": "~2.6.9",
    "dotenv": "^17.2.4",
    "exceljs": "^4.4.0",
    "express": "^4.22.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http-errors": "~1.6.3",
    "jade": "^1.9.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.30.1",
    "mongoose": "^9.2.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  }
}
