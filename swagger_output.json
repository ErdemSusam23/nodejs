              "type": "object",
              "properties": {
                "begin_date": {
                  "type": "string",
                  "example": "2024-01-01"
                },
                "end_date": {
                  "type": "string",
                  "example": "2024-12-31"
                },
                "skip": {
                  "type": "number",
                  "example": 0
                },
                "limit": {
                  "type": "number",
                  "example": 100
